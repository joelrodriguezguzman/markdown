{
  "name": "markdown-view",
  "displayName": "MarkDown View",
  "description": "A modern Markdown editor and viewer for VS Code.",
  "publisher": "joelrodriguezguzman",
  "license": "AGPL-3.0",
  "version": "1.0.1",
  "icon": "images/logo128.png",
  "engines": {
    "vscode": "^1.102.0"
  },
 
  "repository": {
    "type": "git",
    "url": "https://github.com/joelrodriguezguzman/markdown.git"
    },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
        "activitybar": [
        {
            "id": "markdown-view",
            "title": "MarkDown View",
            "icon": "images/logo128.png"
        }
        ]
    },
    "views": {
        "markdown-view": [
        {
            "id": "markdown-view",
            "name": "MarkDown View",
            "icon": "images/logo128.png"
        }
        ]
    },
    "commands": [
      {
        "command": "markdownView.openMarkdownFile",
        "title": "Open Markdown File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "markdownView.openMarkdownFile",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
